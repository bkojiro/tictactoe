//TicTacToe for two players

#include <iostream>

using namespace std;

void gridOut(int grid[][3]);
const int BLANK = 0;
const int X_MOVE = 1;
const int Y_MOVE = 2;

int main() {
  bool playAgain = true;
  bool stillPlaying = true;
  int playerMove = X_MOVE;

  while (playAgain) {
    //keep going until tie/player win
    while (stillPlaying) {
      int grid[3][3] = {{0,0,0},
                        {0,0,0},
                        {0,0,0}};
      gridOut(grid);

      //move entering
      cout << "Enter a letter then a number (no spaces)" << endl << "> ";
      char input[2];
      cin.get(input, 3);
      cin.get();
      int xTemp;
      int yTemp;
      if (input[0] == 'a' || input[0] == 'A') {
	xTemp = 0;
      } else if (input[0] == 'b' || input[0] == 'B') {
	xTemp = 1;
      } else if (input[0] == 'c' || input[0] == 'C') {
	xTemp = 2;
      }
      yTemp = (char)((int)input[1] - 1);
	
      if (playerMove == X_MOVE) {
	playerMove == Y_MOVE;
      } else {
	playerMove == X_MOVE;
      }
    }
    
    //play again
    cout << "Play Again? y/n" << endl << "> ";
    char answer;
    cin >> answer;
    if (answer == 'n') {
      cout << "Bye bye!";
      playAgain = false;
    }
  }
}

void gridOut(int grid[][3]) {
  cout << " 1 2 3" << endl;
  for (int y = 0; y < 3; y++) {
    cout << char(97 + y) << " ";
    for (int x = 0; x < 3; x++) {
      if (grid[x][y] == 0) {
	cout << "  ";
      } else if (grid[x][y] == 1) {
        cout << "X ";
      } else if (grid[x][y] == 2) {
        cout << "Y ";
      }
    }
    cout << endl;
  }
}
